{
  "description": "Test cases for HTML tag conversions",
  "cases": [
    {
      "name": "Strike tag for strikethrough text",
      "wikitext": "You need additional <strike>pylons</strike> temple",
      "expected": "You need additional ~~pylons~~ temple"
    },
    {
      "name": "Multiple strike tags",
      "wikitext": "This is <strike>wrong</strike> and this is also <strike>incorrect</strike> text",
      "expected": "This is ~~wrong~~ and this is also ~~incorrect~~ text"
    },
    {
      "name": "Strike tag with punctuation",
      "wikitext": "The <strike>old</strike> method is deprecated.",
      "expected": "The ~~old~~ method is deprecated."
    },
    {
      "name": "BR tag converted to newline",
      "wikitext": "Line one<br>Line two",
      "expected": "Line one\nLine two"
    },
    {
      "name": "Code tag for inline code",
      "wikitext": "Use <code>variable_name</code> in your script.",
      "expected": "Use ``variable_name`` in your script."
    },
    {
      "name": "HTML comment removed",
      "wikitext": "Visible text<!-- This is a comment -->More visible",
      "expected": "Visible textMore visible"
    },
    {
      "name": "Code tag with angle brackets",
      "wikitext": "Use <code>&lt;tag&gt;</code> syntax.",
      "expected": "Use ``&lt;tag&gt;`` syntax."
    }
  ]
}
