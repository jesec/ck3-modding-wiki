{
  "name": "ck3-modding-wiki",
  "version": "1.20251104.2",
  "description": "Complete Crusader Kings 3 modding documentation from Paradox Wiki in Markdown format",
  "files": [
    "wiki_pages/**/*.md",
    "assets/**/*",
    "TABLE_OF_CONTENTS.md",
    "README.md"
  ],
  "scripts": {
    "test": "node --test tests/**/*.test.js",
    "download": "node index.js download",
    "download-assets": "node index.js download-assets",
    "convert": "node index.js convert && node lib/generate-master-toc.js",
    "master-toc": "node lib/generate-master-toc.js",
    "update": "node index.js download && node index.js convert && node lib/generate-master-toc.js",
    "publish:npm": "npm publish",
    "publish:all": "npm run update && git add wiki_pages && git commit -m \"chore: update wiki content\" && git push && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jesec/ck3-modding-wiki.git"
  },
  "keywords": [
    "crusader-kings-3",
    "ck3",
    "modding",
    "documentation",
    "paradox",
    "wiki",
    "game-modding"
  ],
  "author": "",
  "license": "CC-BY-SA-3.0",
  "bugs": {
    "url": "https://github.com/jesec/ck3-modding-wiki/issues"
  },
  "homepage": "https://github.com/jesec/ck3-modding-wiki#readme",
  "devDependencies": {
    "jsdom": "^27.1.0",
    "marked": "^16.4.1",
    "playwright": "^1.56.1",
    "sharp": "^0.33.5",
    "wikiparser-node": "^1.29.2"
  }
}
