{
  "name": "ck3-modding-wiki",
  "version": "1.20251106.1",
  "type": "module",
  "description": "Complete Crusader Kings 3 modding documentation from Paradox Wiki in Markdown format",
  "files": [
    "wiki_pages/**/*.md",
    "assets/**/*",
    "TABLE_OF_CONTENTS.md",
    "README.md"
  ],
  "scripts": {
    "start": "node index.ts",
    "test": "node --test tests/**/*.test.ts",
    "check-types": "tsgo --noEmit",
    "lint": "oxlint .",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "download": "node index.ts download",
    "download-assets": "node index.ts download-assets",
    "convert": "node index.ts convert && node lib/generate-master-toc.ts",
    "master-toc": "node lib/generate-master-toc.ts",
    "push-wiki": "bash lib/push-to-wiki.sh",
    "update": "node index.ts download && node index.ts convert && node lib/generate-master-toc.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jesec/ck3-modding-wiki.git"
  },
  "keywords": [
    "crusader-kings-3",
    "ck3",
    "modding",
    "documentation",
    "paradox",
    "wiki",
    "game-modding"
  ],
  "author": "",
  "license": "CC-BY-SA-3.0",
  "bugs": {
    "url": "https://github.com/jesec/ck3-modding-wiki/issues"
  },
  "homepage": "https://github.com/jesec/ck3-modding-wiki#readme",
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.0",
    "@typescript/native-preview": "^7.0.0-dev.20251104.1",
    "jsdom": "^27.1.0",
    "oxlint": "^1.25.0",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "sharp": "^0.33.5",
    "wikiparser-node": "^1.29.2"
  }
}
